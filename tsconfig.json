{
    "compilerOptions": {
        // required
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "jsx": "react",
        "jsxFactory": "Roact.createElement",
        "jsxFragmentFactory": "Roact.createFragment",
        "module": "commonjs",
        "moduleResolution": "Node",
        "noLib": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "moduleDetection": "force",
        "strict": true,
        "target": "ESNext",
        "typeRoots": [
            "node_modules/@rbxts",
            "node_modules/@antivivi"
        ],
        // configurable
        "rootDir": "src",
        "outDir": "out",
        "incremental": false,
        "declaration": true,
        "skipLibCheck": true,
        "plugins": [
            {
                "transform": "rbxts-transformer-flamework",
                "exclude": [
                    "**/node_modules/**"
                ],
                "obfuscation": false,
                "noSemanticDiagnostics": true
            },
        ]
    },
    "include": [
        "src"
    ]
}