{
    "name": "@rbxts/fletchette",
    "version": "4.1.0",
    "description": "Simple networking library for roblox-ts.",
    "main": "out/init.lua",
    "scripts": {
        "build:library": "rbxtsc --rojo library.project.json",
        "build:test": "rbxtsc --rojo test.project.json --type game && npx rojo build test.project.json --output test.rbxlx",
        "dev": "concurrently \"npx rojo serve test.project.json\" \"rbxtsc -w --rojo test.project.json --type game\"",
        "test": "npm run build:test && run-in-roblox --script out/test/runTests.luau --place test.rbxlx",
        "docs": "npx typedoc",
        "prepare": "npm run build:library & npm run docs"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/evilbocchi/fletchette.git"
    },
    "keywords": [],
    "author": "evilbocchi",
    "license": "ISC",
    "types": "out/index.d.ts",
    "files": [
        "out",
        "!out/test",
        "!**/*.tsbuildinfo"
    ],
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "@rbxts/compiler-types": "^3.0.0-types.0",
        "@rbxts/types": "^1.0.877",
        "@typescript-eslint/eslint-plugin": "^8.41.0",
        "@typescript-eslint/parser": "^8.41.0",
        "concurrently": "^9.2.1",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-roblox-ts": "^1.1.0",
        "roblox-ts": "^3.0.0",
        "rojo": "^1.0.2",
        "typedoc": "^0.28.11",
        "typedoc-material-theme": "^1.4.0",
        "typedoc-plugin-extras": "^4.0.1",
        "typedoc-plugin-missing-exports": "^4.1.0",
        "typedoc-plugin-rename-defaults": "^0.7.3",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.44.0"
    },
    "dependencies": {
        "@antivivi/lemon-signal": "^1.2.4",
        "@flamework/core": "^1.3.1",
        "@rbxts/flamework-binary-serializer": "^0.6.0",
        "@rbxts/services": "^1.5.5",
        "@rbxts/testez": "^0.4.2-ts.0"
    }
}
